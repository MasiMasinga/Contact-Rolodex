// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  email    String    @unique
  password String
  contacts Contact[]
}

model Contact {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  contact_type String
  phone_number String
  user         User   @relation(fields: [userId], references: [id])
  userId       Int
}
